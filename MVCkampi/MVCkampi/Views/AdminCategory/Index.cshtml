@using EntityLayerr.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-hover">
    <tr>
        <th></th>
        <th>Kategori</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Başlıklar</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <th>@x.CategoryiD</th>
        <td>@x.CategoryName</td>
        <td>@x.CategoryDescription</td>
        <td><a href="/AdminCategory/DeleteCategory/@x.CategoryiD" class="btn btn-danger">Sil</a></td>
        <td><a href="/AdminCategory/EditCategory/@x.CategoryiD" class="btn btn-warning">Güncelle</a></td>
        <td><a href="" class="btn btn-primary">Başlıklar</a></td>

    </tr>
    }
</table>
<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori Ekle </a>